{
    "name":"test",
    "version":{
        "value":"1.0",
        "changelog":"Initial version"
    },
    "status":{
        "value":"active"
    },
    "access": {
        "insert": ["admin"],
        "find": ["admin", "all"],
        "update": ["admin"],
        "delete": ["admin"]
    },
    "constraints": [
        {
            "unique": ["name"]
        },
        {
            "unique": ["counter"]
        },
        {
            "reference": {
                "entityName": "other",
                "versionValue": "0.1",
                "projection": {
                    "field": "firstname",
                    "include": true,
                    "recursive": true
                },
                "query": {
                    "field": "login",
                    "op": "$eq",
                    "rvalue": "somevalue"
                },
                "sort": {
                    "login": "$asc"
                }
            }
        }
    ],
    "datastore":{
        "mongo":{
            "database":"some/identifier",
            "collection":"test"
        }
    },
    "fields":{
        "name":{
            "type":"string"
        },
        "counter":{
            "type":"integer"
        }
    }
}
