            "type":"string"
        },
        "customerType":{
            "type":"string",
            "enum":[
                "person",
                "organization"
            ]
        },
        "creationDate":{
            "type":"date",
            "required":true
        },
        "lastUpdateDate":{
            "type":"date"
        },
        "credentials":{
            "type":"object",
            "fields":{
                "login":{
                    "type":"string",
                    "required":true
                },
                "password":{
                    "type":"string",
                    "required":true
                }
            },
            "required":true
        }
    }
}