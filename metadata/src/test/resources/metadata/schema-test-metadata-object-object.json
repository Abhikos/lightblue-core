    },
    "status":{
        "value":"active"
    },
    "access": {
        "insert": ["admin"],
        "find": ["admin", "all"],
        "update": ["admin"],
        "delete": ["admin"]
    },
    "constraints": [
        {
            "unique": ["name"]
        }
    ],
    "datastore":{
        "mongo":{
            "database":"some/identifier",
